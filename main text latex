\subsection{Anexo 3: Codigo Fuente Distribución Gamma}
\begin{minted}[
framesep=2mm,
baselinestretch=1.2,
fontsize=\footnotesize,
]{python}
import random
import numpy as np
import math
import matplotlib.pyplot as pl

cantMuestras = 50000
lista = []
listaPython = []
sumaLog = 0

print("Distribucion Gamma")
print("Ingrese la cantidad de muestras a utilizar.")
cantMuestras = int(input())
print("Ingrese el parametro alfa")
alfa = int(input())
print("Ingrese valor k")
kkk = int(input())

for i in range(0, cantMuestras):
    sumaLog = 0
    for h in range (0, kkk):
        r = random.random()
        sumaLog = sumaLog + math.log(r)
    x = -(1/alfa)*sumaLog
    lista.append(x)
    listaPython.append(np.random.gamma(kkk, 1/alfa))

print("El promedio segun formula es:" + str(kkk / alfa))
print("El promedio calculado es: " + str(np.mean(lista)))
print("El promedio calculado en la autogenerada es: " + str(np.mean(listaPython )))
print("La varianza segun formula es: " + str(1 / alfa ** 2))
print("La varianza calculada es: " + str(np.var(lista)))
print("La varianza calculada en la autogenerada es: " + str(np.var(listaPython)))

pl.figure("Histograma de frecuencias de una variable con distribucion Gamma")
pl.suptitle("Distribucion Gamma")
pl.title("El parametro alfa vale " + str(alfa)  + " y el parametro k vale " + str(kkk))
pl.hist([lista, listaPython], bins=30, range=(0, 5), label=['x', 'y'], color = ['orange', 'blue'])
pl.grid(True)
pl.xlabel("tiempo(s)")
pl.ylabel("Valores")
pl.text( 1, 5,'Funcion de Python', color = "blue", style='italic', bbox={'facecolor':'white', 'alpha':0.90, 'pad':5})
pl.text( 3, 5, 'Transformada Inversa', color = "orange", style='italic', bbox={'facecolor':'white', 'alpha':0.90, 'pad':5})
pl.show()  # Dibujar
pl.clf()

\end{minted}

