\subsection{Anexo 4: Codigo Fuente Distribución Normal}
\begin{minted}[
framesep=2mm,
baselinestretch=1.2,
fontsize=\footnotesize,
]{python}

import matplotlib.pyplot as pl
import numpy as np
import math
import random

def dibujarHistogramas(lista, media, sigma):
    pl.figure("Histograma de frecuencias de una variable con distribucion Normal")
    pl.suptitle("Distribucion Normal")
    pl.title("El media vale %3.2f y el desvio vale %3.2f" % (media, sigma))
    pl.hist([lista, listaPython], bins=30, range=(media - 6*sigma, media + 6*sigma), label=['x', 'y'], color=['orange', 'blue'])
    pl.grid(True)
    pl.xlabel("tiempo(s)")
    pl.ylabel("Valores")
    pl.text( media - 4 * sigma, 5, 'Funcion de Python', color="blue", style='italic',
            bbox={'facecolor': 'white', 'alpha': 0.90, 'pad': 5})
    pl.text(media + sigma, 5, 'Transformada Inversa', color="orange", style='italic',
            bbox={'facecolor': 'white', 'alpha': 0.90, 'pad': 5})
    pl.show()
    pl.clf()

print("Distribucion Normal")
print("Ingrese la cantidad de muestras a utilizar.")
cantMuestras = int(input())
print("Ingrese la media poblacional")
media = float(input())
print("Ingrese el desvio estandar poblacional")
sigma = float(input())

lista=[]
listaPython=[]

for i in range(cantMuestras):
    sum = 0
    for j in range(12):
        r = random.random()
        sum = sum + r
    x = sigma * (sum - 6) + media
    lista.append(x)
    listaPython.append(np.random.normal(media, sigma))

print("El promedio ingresado fue :" + str(media))
print("El promedio calculado es: " + str(np.mean(lista)))
print("El promedio calculado en la autogenerada es: " + str(np.mean(listaPython)))
print("La desvio estandar ingresado fue: " + str(sigma))
print("La desvio estandar calculado es: " + str(math.sqrt(np.var(lista))) )
print("La desvio estandar calculado en la autogenerada es: " + str(math.sqrt(np.var(listaPython))) )

dibujarHistogramas(lista, media, sigma)


\end{minted}

