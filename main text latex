\subsection{Anexo 6: Codigo Fuente Distribución de Poisson}
\begin{minted}[
framesep=2mm,
baselinestretch=1.2,
fontsize=\footnotesize,
]{python}

import random
import numpy as np
import math
import matplotlib.pyplot as pl

cantMuestras = 100000
lista = []
listaPython = []

print("Distribucion de Poisson")
print("Ingrese la cantidad de muestras a utilizar.")
cantMuestras = int(input())
alfa = int(input("Ingrese el parametro de la distribucion de Poisson"))
comparador = math.exp(-alfa) # Definicion segun formula

for i in range(cantMuestras):
    contador = 1
    bool = True # Usada para agregar a la lista los casos en que el contador queda en 1.
    x = random.random()
    while x >= comparador:
        x = x * random.random()
        contador += 1
        if x < comparador:
            lista.append(contador)
            bool = False
            continue
    if x < comparador and bool:
        lista.append(contador) # Casos en que el contador queda en 1.
                                # En el caso de que el primer numero aleatorio sea menor a x, y por lo tanto no se ejecute el ciclo del while.

    listaPython.append(np.random.poisson(alfa))

print("El promedio esperado es:" + str(alfa))
print("El promedio calculado es: " + str(np.mean(lista)))
print("El promedio calculado en la autogenerada es: " + str(np.mean(listaPython )))
print("La varianza esperada es: " + str(alfa))
print("La varianza calculada es: " + str(np.var(lista)))
print("La varianza calculada en la autogenerada es: " + str(np.var(listaPython)))

print(len(lista))
print(len(listaPython))
pl.figure("Histograma de frecuencias")
pl.suptitle("Distribucion de Poisson")
pl.title("El parametro alfa vale " + str(alfa))
pl.hist([lista, listaPython], bins=20, range=(0, 20), label=['x', 'y'], color = ['orange', 'blue'])
pl.grid(True)
pl.xlabel("tiempo(s)")
pl.ylabel("Valores")
pl.text(1 , 5,'Funcion de Python', color = "blue", style='italic', bbox={'facecolor':'white', 'pad':5})
pl.text(alfa + 5, 5, 'Transformada Inversa', color = "orange", style='italic', bbox={'facecolor':'white', 'pad':5})
pl.show()  # Dibujar
pl.clf()



\end{minted}

