\subsection{Anexo 5: Codigo Fuente Distribución Binominal}
\begin{minted}[
framesep=2mm,
baselinestretch=1.2,
fontsize=\footnotesize,
]{python}

import random
import matplotlib.pyplot as pl
import numpy as np
import math


def cantCombinaciones(m, n):
    return ( math.factorial(m) // (math.factorial(n) * math.factorial(m - n)) )

def dibujarHistograma(lista, probSuceso):
    pl.figure("Histograma de frecuencias de una variable con distribucion Binominal")
    pl.suptitle("Distribucion Binominal")
    pl.title("El probabilidad de ocurencia del suceso es  " + str(probSuceso))
    pl.hist([lista, listaPython], bins=30, label=['x', 'y'], color=['orange', 'blue'])
    pl.grid(True)
    pl.xlabel("tiempo(s)")
    pl.ylabel("Valores")
    pl.text(1, 5, 'Funcion de Python', color="blue", style='italic',
            bbox={'facecolor': 'white', 'alpha': 0.90, 'pad': 5})
    pl.text(3, 5, 'Transformada Inversa', color="orange", style='italic',
            bbox={'facecolor': 'white', 'alpha': 0.90, 'pad': 5})
    pl.show()
    pl.clf()

print("Distribucion Binomial")
print("Ingrese la cantidad de la muestra a utilizar.")
cantMuestras = int(input())
print("Ingrese la probabilidad de ocurrencia del suceso")
probSuceso = float(input())

lista=[]
listaPython=[]

numeroEnsayos = 1000
for j in range(cantMuestras):
    x = 0
    for i in range(0, numeroEnsayos):
        if (random.random() - probSuceso) < 0:
            x = x + 1
    lista.append(x)
    listaPython.append(np.random.binomial(numeroEnsayos, probSuceso))

print("El promedio segun formula es:" + str(numeroEnsayos * probSuceso))
print("El promedio calculado es: " + str(np.mean(lista)))
print("El promedio calculado en la autogenerada es: " + str(np.mean(listaPython )))
print("La varianza segun formula es: " + str(numeroEnsayos * probSuceso * (1 - probSuceso)))
print("La varianza calculada es: " + str(np.var(lista)))
print("La varianza calculada en la autogenerada es: " + str(np.var(listaPython)))

dibujarHistograma(lista, probSuceso)



\end{minted}


